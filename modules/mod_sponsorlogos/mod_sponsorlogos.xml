	type="module"
	version="3.0.0"
	client="site"
	method="upgrade">
	<name>Sponsor Logos</name>
	<author>PluginValley http://www.pluginvalley.com</author>
	<creationDate>October 2013</creationDate>
	<copyright>PluginValley http://www.pluginvalley.com</copyright>
